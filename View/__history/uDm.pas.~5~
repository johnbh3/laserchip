{%CLASSGROUP 'Vcl.Controls.TControl'}


{$R *.dfm}
procedure TDM.DataModuleCreate(Sender: TObject);
begin
   conexao :=TConexao.Create(FDConnection1);
   conexao.servidor :='localhost';
   conexao.base:='pedidos';
   conexao.porta:='3306';
   conexao.login:='root';
   conexao.senha:='123456';
end;
end.
